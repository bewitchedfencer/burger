{{!this is the template that will go inside the main layout}}

  {{#each burger}}
<div id='leftBox'>

    {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
    {{/unless}}
</div>
  {{/each}}

  {{#each burger}}
<div id='rightBox'>
    {{#if devoured}}
    {{/if}}
</div>
  {{/each}}

<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-button" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>
{{!must include a submit button to submit the user's input}}